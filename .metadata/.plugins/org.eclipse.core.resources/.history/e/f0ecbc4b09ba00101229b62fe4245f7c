#ifndef RPI_SPI_LINK_H
#define RPI_SPI_LINK_H

#include <stdbool.h>

#include "stm32l4xx_hal.h"
#include "meas_config.h"

// MAX SPI BUFFER SIZE
#define BUFFER_SIZE 1024

//Pi -> STM32 Commands
typedef enum {
	SET_CONFIG = 0x01,
	SEND_TEXT = 0x02

} rx_commands_t;

//STM32 -> Pi Commands
typedef enum {
	START_UP = 0x80,
	LOG_MESSAGE = 0x81,
	DEBUG_INFO = 0x82
} tx_commands_t;

void link_init(SPI_HandleTypeDef *spi, bool* packet_recieved);
void send_packet_to_pi(tx_commands_t command, const uint8_t* payload, uint16_t length);
void process_packet();

static void spi_int_assert(void);
static void spi_int_deassert(void);
static void start_listening(void);
static void process_text(char* text, uint16_t len);
static void process_config(MeasConfig_t* received_config);

#endif

