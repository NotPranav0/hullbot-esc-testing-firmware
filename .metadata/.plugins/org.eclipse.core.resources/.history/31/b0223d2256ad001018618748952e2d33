#ifndef STM32_SPI_LINK_H
#define STM32_SPI_LINK_H

#include "stm32l4xx_hal.h"
#include <stdint.h>
#include <stdbool.h>
#include <stdio.h>
#include <string.h>

#define BUFFER_SIZE 1024

typedef enum {
	//Pi -> STM32 Commands
	SET_CONFIG = 0x01,
	SEND_TEXT = 0x02,
	//STM32 -> Pi Commands
	LOG_MESSAGE = 0x81,
	STATUS_UPDATE = 0x82

} Commands_t;


void link_init(SPI_HandleTypeDef *spi, bool* packet_recieved);
void send_packet_to_pi(uint8_t command, const uint8_t* payload, uint16_t length);
void process_packet();

#endif

