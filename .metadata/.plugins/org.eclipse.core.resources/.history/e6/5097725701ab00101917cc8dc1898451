#ifndef STM32_SPI_LINK_H
#define STM32_SPI_LINK_H

#include "stm32l4xx_hal.h"
#include <stdint.h>
#include <stdbool.h>
#include <stdio.h>
#include <string.h>

#define TX_MAX 1024
#define RX_MAX 1024

typedef enum {
	//Pi -> STM32 Commands
	SET_CONFIG = 0x01,
	SEND_TEXT = 0x02,
	//STM32 -> Pi Commands
	LOG_MESSAGE = 0x81,
	STATUS_UPDATE = 0x82

} Commands_t;


void link_init(SPI_HandleTypeDef *spi);
void link_task(opcode_t opcode);
void link_send_string(const char* s);

#endif

